# Application
APP_NAME=Lush Moments
APP_VERSION=2.0.0
DEBUG=False

# Database
DATABASE_URL=sqlite+aiosqlite:///lush_moments.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/lush_moments

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Redis (Optional - caching disabled if not configured)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# SMTP Email Configuration (Optional - emails log to console if not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-or-password
SMTP_FROM_EMAIL=noreply@lushmoments.com
SMTP_USE_TLS=True

# Business Contact (Used in email templates and contact info)
ADMIN_EMAIL=admin@lushmoments.com
BUSINESS_PHONE=+1-555-LUSH-MOMENTS

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Media Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Cloudinary (Optional - for media uploads if using)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret